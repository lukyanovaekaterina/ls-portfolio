.about{
  height: 100vh;
display: flex;
flex-direction: row;
}

.container.about__container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.about__left{
width: calc(100%-30px);
}

.about__title{
  font-size: 36px;
  font-weight: bold;
  color: #ffffff;
}

.about__text{
  line-height: 1.875;
}