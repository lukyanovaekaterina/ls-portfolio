.form{
  
&__container{
  height: 100vh;

  @include tablets() {
    display: flex;
    justify-content: center;
  }

}

&__content{

  @include tablets(){
    width: 90%;
  }
}

&__title{
  font-size: 36px;
  color: #ffffff;
  margin: 100px 0px;

  @include tablets(){
  display:flex;
  justify-content: center;
  }
}

&__row{
  display: flex;
  width: 50%;
  margin-bottom: 50px;

 
  @include tablets(){
    width: 100%;
  }

  @include phones() {
    flex-direction: column;
  }
}

&__row-btn{

  @include tablets(){
    display: flex;
  justify-content: center;
  }
}

&__label{
  display: flex;
  flex-direction: column;
  width: 50%;
  font-family: 'Open Sans' sans-serif ;
   margin-left: 98px;

&:first-child{
    margin-left: 0;
  }

  @include phones(){
    width: 100%;
    margin-left: 0;
  }

  }

&__input{
  width: 100%;
  background-color: transparent;
  border-style: none none solid none;
  border-color: #ffffff;
  padding: 8px;
}

&__textarea{
  width: 200%;
  min-height: 100px;
  border-color: #ffffff;
    border-style: none none solid none;
    border-width: 2px;

  @include phones() {
    width: 100%;
  }
}
}