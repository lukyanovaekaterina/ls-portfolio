
.reviews__container{
  display: flex;
  flex-direction: column;
  width: 50%;
}

.reviews-title{
  font-size: 36px;
  color: #ffffff;
  margin: 100px 0px;
}

.reviews-message{
  margin-bottom: 26px;
}

.reviews__foto{
  display: block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  object-fit: cover;
  border-radius:50%;
}

.reviews{
  display: flex;
  flex-direction: row;
}