.values{
 height: 100vh;
 display: flex;
 background-color: #242222;

&__container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

&__title{
  text-align: left;
  width: 600px;
}

&__title-text{
color: #ffffff;
font-size: 30px; 
margin-bottom: 60px;
}

&__desc{
  margin-bottom: 84px;
  line-height: 1.875;
  color: #ffffff;
  opacity: 0.6;
}

&__picture{
  display: flex;
  object-fit: cover;
  margin-top: 100px;
  margin-bottom: -70px;
}
}
