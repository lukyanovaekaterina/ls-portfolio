include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        .parallax
          .parallax__layer.parallax__layer-sky
            img(src=require("images/bg/1.jpg")).parallax__image
          .parallax__layer.parallax__layer-mountains
            img(src=require("images/bg/2.png")).parallax__image
          .parallax__layer.parallax__layer-locomotive
            img(src=require("images/bg/3.png")).parallax__image
          .parallax__layer.parallax__layer-grass
            img(src=require("images/bg/4.png")).parallax__image
          .parallax__layer.parallax__layer-fon
            img(src=require("images/bg/5.png")).parallax__image
          .parallax__layer.parallax__layer-fon2
            img(src=require("images/bg/5.png")).parallax__image  
        section.hero#hero
          .container.hero__container
            header.header.hero__header
              .hero__logo
                .logo ЛЕ
              .hero__nav#hero__nav
                include ./templates/nav.pug
                  
              .hero__menu
                include ./templates/social.pug
              .hero__gamburger
                include ./templates/gamburger.pug
                  
            .hero__content
              .user-info
                h1.user-info__desc Личный сайт <br/> вебразработчика
                .user-info__username Лукьянова <br/> Екатерина
            .hero__btns
              a(href="#about").scroll-down-btns
                +icon('scroll', 'scroll__btn')
                
        section.about#about
          .container.about__container
            .about__content
              .about__left
                .user
                  .avatar.user__avatar
                    +image("content/user.jpg", "avatar__pic")
                  table.user__desc
                    -
                      var items = [
                        ['Проживаю: ', 'Краснодар'],
                        ['Возраст:', '39 лет'],
                        ['Родилась:', '9 февраля 1981'],
                      ]
                  
                    each item in items
                      tr
                        td.user__key #{item[0]}
                        td.user__value #{item[1]}
              .about__right
                h4.about__prolog Привет, меня зовут
                h2.about__title Екатерина Лукьянова
                .about__text Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      
      section.values#values
        .container.values__container
          .values__picture
              +image("bg/Hands.png", "values__pic")
          .values__content
            .values__title
              h2.values__title-text Чем я могу быть вам полезна
              .values__desc
                p.values__desc-text Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            .values__widget

              #skills-component
                                  
      section.works#works
        .container.works__container
          h2.section-title Мои работы
          .works__content
            #slider-component
              
      .feedback-section#reviews
        section.reviews
          .container.reviews__container
            #slider-reviews

        section.form(id='form')
          .container.form__container
            #slider-form
            
      footer.footer
        .footer__content
          .footer__user
            .footer__year
              span.footer__year-text &copy2020
            .footer__user-info
              .footer__user-name Лукьянова Екатерина
              p.footer__user-desc Личный сайт вебразработчика
          .footer__reiht
            .footer__nav
              nav.nav-footer
               include ./templates/nav.pug

            .footer__comment
              .footer__comment-left
                p.footer__message Этот сайт я сделала в рамках обучения в Школе онлайн образования Loftschool
                .footer__menu
                  include ./templates/social.pug
              .footer__comment-reiht
                p.footer__comment-text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                .footer__comment-desc Martin Golding
            
    include ./templates/entry.pug

